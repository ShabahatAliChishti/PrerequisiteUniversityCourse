@model List<StudentStreamingSystem.Context.Course>
@{
    ViewBag.Title = "ViewCourses";
}
<h2 class="text-center">Courses Details</h2>
<hr />
@using (Html.BeginForm("UploadExcelCourse", "Courses", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
{
    <h4>Upload Excel File</h4>
    <div class="form-group">
        <div class="control-label row-cols-4">
            <input type="file" id="FileUpload" name="FileUpload" class="btn btn-outline-primary" style="border:1px solid blue" />
            <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary btn-sm" />
        </div>
    </div>
    <hr />
}
<a href="@Url.Action("ViewCourses", "Course")" class="btn btn-success btn-sm">Refresh</a>
<a href="@Url.Action("Create","Course")" class="btn btn-success btn-sm">Create New</a>
<table id="myTable" class="table table-hover table-bordered">
    <tr>
        <th>Term</th>
        <th>Course Code.</th>
        <th>Course Name</th>
        <th>Credits</th>
        <th>Class Type</th>
        <th>Course Type</th>
        <th>Begins At</th>
        <th>Ends At</th>
        <th>Prerequisite Course</th>
        <th>RoomName</th>
        <th>No Of Seats</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Term.TermName</td>
            <td>@item.CourseCode</td>
            <td>@item.CourseName</td>
            <td>@item.CrHrs</td>
            <td>@item.ClassType</td>
            <td>@item.CourseType</td>
            <td>@item.BeginsAt</td>
            <td>@item.EndsAt</td>
            <td>@item.Prerequisite.Name</td>
            <td>@item.RoomName</td>
            <td>@item.No_Of_Seats</td>

            <td>
                <a href="@Url.Action("EditCourses",new {id=item.CourseID })" class="btn btn-success btn-sm">Edit</a>
            </td>
            <td>
                <a href="@Url.Action("DeleteCourses", new { id = item.CourseID })" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("AdminUpload","Admin")" class="btn btn-primary">Back To Admin</a>
